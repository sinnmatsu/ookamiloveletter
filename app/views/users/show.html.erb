<% if logged_in? %>

  <% if current_user.id == @user.id %>
  <!--アクセスしたuserが自分だった場合-->
    <div class="toppage">
    
    <div class="log-title">
      <img src="/newimages/newlogo@2x.png" alt="オオカミloveletter" width="80%">
    </div>
    
    <div class="herat">
      <img src="/newimages/doubleherat@2x.png" alt="ハート" width="58px" height="30px">
    </div>
  
    <div class="text-alines">
      <p><%= @user.name %></p>       
    </div>
  
    <div class="URLcreate">
      <div class="IDarea">
        <p><%= user_url(@user) %></p>
      </div>
    </div>
    
    <div class="setlog">
      <img src="/newimages/setlog@2x.png" alt="アプリの機能" width="176px" height="26px">
    </div>
  
    <div class="button">
      <!--letterを受け取るボタン-->
      <div class="takeletter">
        <%= link_to takeletters_path ,class: 'takebuttonhidden' do %>
          <%= image_tag "/newimages/newletterbutton@2x.png",:size =>"105x110" %>
        <% end %>
      </div>
    
      <div class="friend">
        <%= link_to friends_path ,class: 'takebuttonhidden' do %>
          <%= image_tag "/newimages/friendbutton@2x.png",:size =>"101x127" %>
        <% end %>
      </div>
    </div>
    
</div>

    
  <% else %>
  
    <!--自分ではない場合-->
    <div class="accountview">
      <%= link_to root_path ,class: 'myaccountbutton' do %>
        <%= image_tag "/newimages/newmyaccount@2x.png",:size =>"226x45" %>
      <% end %>
    </div>
    
     <div class="log-title">
      <img src="/newimages/newlogo@2x.png" alt="オオカミloveletter" width="80%">
    </div>
    
    <div class="herat">
      <img src="/newimages/doubleherat@2x.png" alt="ハート" width="58px" height="30px">
    </div>
  
    <div class="text-alines">
      <p><%= @user.name %></p>       
    </div>
  
    
    <div class="setlog">
      <img src="/newimages/setlog@2x.png" alt="アプリの機能" width="176px" height="26px">
    </div>
  
    <div class="button">
      <!--letterを受け取るボタン-->
      <div class="takeletter">
        <%= link_to choice_path(@user) ,class: 'takebuttonhidden' do %>
          <%= image_tag "/newimages/newwrite@2x.png",:size =>"99x130" %>
        <% end %>
      </div>
    
      <div class="friend">
        <%= link_to lookfriend_path(@user) ,class: 'takebuttonhidden' do %>
          <%= image_tag "/newimages/friendbutton@2x.png",:size =>"101x127" %>
        <% end %>
      </div>
    </div>

  <% end %>
 

<% else %>
<!--showの場合はログインしていない状態でも相手のプロフィール画面に来ることができる-->

    
