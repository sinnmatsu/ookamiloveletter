        <% end %>
      </div>
    
      <div class="friend">
        <%= link_to lookfriend_path(@user) ,class: 'takebuttonhidden' do %>
          <%= image_tag "/newimages/friendbutton@2x.png",:size =>"101x127" %>
        <% end %>
      </div>
    </div>
    
  </div>


<% end %>



