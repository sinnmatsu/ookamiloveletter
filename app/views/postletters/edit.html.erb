



<%= form_for(@updataletter) do |f| %>
  <% if @updataletter.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @updataletter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <%= image_submit_tag("/newimages/backbutton@2x.png", class: 'sendookamiback')%>
 
 <div class="truth-title">
  <img src="/newimages/trueletter-title-from@2x.png" alt="真実のloveletter" width="220px" height="73px">
</div>
  
<div class="letterarea">
  <div class="form-group">
    <%= f.text_area :text, class: 'form-control', rows: 5 , readonly: true %>
    <div class="from">
      <img src="/newimages/trueletter-from@2x.png" alt="真実のloveletter" width="99px" height="31px">
    </div>
    <%= f.text_area :account, class: 'form-account', readonly: true %>
    <%= f.hidden_field :check, :value => "true" %>
    <!--隠しフィールド内に値をセットする場合はvalueオプションを使用する必要がある-->
  </div>
</div>

 <%= image_submit_tag("/newimages/go-toppage@2x.png", class: 'sendookami')%>
  
<% end %>





