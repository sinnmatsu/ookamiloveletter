<div class="backbutton">
  <%= link_to takeletters_path ,class: 'takebuttonhidden' do %>
    <%= image_tag "/newimages/backbutton@2x.png",:size =>"19x33" %>
  <% end %>
</div>

<div class="log-title">
  <img src="/newimages/letter-title@2x.png" alt="この手紙は嘘の可能性があります" width="243px" height="100px">
</div>

<%= form_for(@updataletter) do |f| %>
  <% if @updataletter.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @updataletter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="letterarea">
  <div class="form-group">
    <%= f.text_area :text, class: 'form-control', rows: 5 , readonly: true %>
    
    <%= f.hidden_field :check, :value => "true" %>
    <!--隠しフィールド内に値をセットする場合はvalueオプションを使用する必要がある-->
  </div>
</div>

 <%= image_submit_tag("/newimages/edit-button@2x.png", class: 'sendookami')%>
  
<% end %>





