
<div class="logo">
  <img src="/images/ookamiloveletter@3x.png" alt="オオカミloveletter" width="204px" height="18px">
</div>
<!-- @postletterのリンク先のみを生成する-->
<%= form_for(@postletter) do |f| %>
<% if @postletter.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @postletter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="letterarea">
  <div class="form-group">
    <%= f.text_area :text, class: 'form-control', rows: 5 %>
    <!--パラメーター名がtextでパラメータ値が記入した文章になる-->
    <%= f.hidden_field :which, :value => "lies" %>
    <%= f.hidden_field :user_id, :value => @user2.id %>
    <%= f.hidden_field :account, :value => "匿名希望" %>
    
  
    
    <!--隠しフィールド内に値をセットする場合はvalueオプションを使用する必要がある-->
  </div>
</div>

  <%= image_submit_tag("sendookamiletter@3x.png", class: 'sendookami')%>
  <!--javascriptで画面遷移を設定する-->
<% end %>
<!--textという名称のパラメータ値がpostletterのインスタンスに送られる-->

<div class="gaidebutton">
  <%= link_to ookamigaide_path(@user2) ,class: 'gaidebuttonhidden' do %>
    <%= image_tag "/images/ookamibuttons@2x.png",:size =>"60x72" %>
  <% end %>
</div>